{
    "compilerOptions": {
        "target": "es2016",
        "experimentalDecorators": true,
        "module": "commonjs",
        "baseUrl": "./src",
        "paths": {
            "@app/*": [
                "*"
            ]
        },
        "resolveJsonModule": true,
        "outDir": "./dist",
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}