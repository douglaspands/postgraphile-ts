{
    "compilerOptions": {
        "target": "es2016",
        "experimentalDecorators": true,
        "module": "commonjs",
        "baseUrl": "./src",
        "paths": {
            "@app/*": ["*"]
        },
        "resolveJsonModule": true,
        "outDir": "./dist",
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": true
    },
    "include": ["src/**/*", "tests/**/*", "scripts/**/*"],
    "exclude": ["node_modules"]
}
