{
    "name": "postgraphile-ts",
    "version": "1.0.0",
    "description": "Projeto de API GraphQL utilizando a combinação do Typescript, Postgraphile e PostgreSQL.",
    "scripts": {
        "build": "run-s rm:dist lint tsc tsc:alias",
        "build:watch": "npm-run-all build --parallel tsc:watch tsc:alias:watch",
        "format": "run-s lint:fix prettier",
        "lint": "eslint './src/**/*.{ts,json}'",
        "lint:fix": "eslint --fix './src/**/*.{ts,json}'",
        "prettier": "prettier --write \"./src/**/*.+(ts|json)\"",
        "rm:dist": "node scripts/clean.js",
        "start:ts": "nodemon ./scripts/server.ts",
        "start:js": "node ./scripts/server.js",
        "start": "run-s start:ts",
        "test": "jest",
        "tsc": "tsc --project ./tsconfig-build.json",
        "tsc:alias": "tsc-alias --project ./tsconfig-build.json",
        "tsc:alias:watch": "tsc-alias --project ./tsconfig-build.json --watch",
        "tsc:clean": "tsc --project ./tsconfig-build.json --build --clean",
        "tsc:watch": "tsc --project ./tsconfig-build.json --watch --sourceMap",
        "postgresql:start": "docker compose -f ./docker/postgresql/docker-compose.yaml up -d",
        "postgresql:stop": "docker compose -f ./docker/postgresql/docker-compose.yaml stop",
        "postgresql:logs": "docker logs --follow postgresql-container",
        "postgresql:rm": "docker compose -f ./docker/postgresql/docker-compose.yaml down -v"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/douglaspands/postgraphile-ts.git"
    },
    "keywords": [
        "typescript",
        "postgraphile"
    ],
    "author": "@douglaspands",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/douglaspands/postgraphile-ts/issues"
    },
    "homepage": "https://github.com/douglaspands/postgraphile-ts#readme",
    "devDependencies": {
        "@jest/globals": "^29.3.1",
        "@types/express": "^4.17.15",
        "@types/figlet": "^1.5.5",
        "@types/jest": "^29.2.5",
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.48.2",
        "@typescript-eslint/parser": "^5.48.2",
        "eslint": "^8.32.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-jest": "^27.2.1",
        "jest": "^29.3.1",
        "nodemon": "^2.0.20",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.8.3",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.2",
        "tsconfig-paths": "^4.1.2",
        "tslib": "^2.4.1",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "@graphile-contrib/pg-simplify-inflector": "^6.1.0",
        "commander": "^10.0.0",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "figlet": "^1.5.2",
        "graphile-migrate": "^1.4.1",
        "http-status-codes": "^2.2.0",
        "pg": "^8.8.0",
        "postgraphile": "^4.13.0",
        "postgraphile-plugin-connection-filter": "^2.3.0",
        "winston": "^3.8.2"
    }
}
